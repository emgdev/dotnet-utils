  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <AssemblyName>EMG.Utilities.Hosting.TopShelf</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>EMG.Utilities.Hosting.TopShelf</PackageId>
    <PackageTags>dotnet-standard;topshelf</PackageTags>
